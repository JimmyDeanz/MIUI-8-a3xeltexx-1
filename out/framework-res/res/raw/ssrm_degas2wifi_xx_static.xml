<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE siop_document [
<!ELEMENT siop_document (levels , default_scenario , extra_scenario?)>
<!ELEMENT levels (level)+>
<!ELEMENT level EMPTY>
<!ATTLIST level
          id CDATA #REQUIRED
          temp CDATA #REQUIRED>
<!ELEMENT default_scenario (limiter)+>
<!ELEMENT limiter (sts_item* , table_item*)>
<!ATTLIST limiter
          name CDATA #REQUIRED
          type (STS|number|bool) #REQUIRED>
<!ELEMENT sts_item EMPTY>
<!ATTLIST sts_item
          pre CDATA #IMPLIED
          perc CDATA #IMPLIED
          trigger CDATA #REQUIRED
          release CDATA #REQUIRED
          min CDATA #IMPLIED
          max CDATA #IMPLIED
          duration CDATA #IMPLIED>
<!ELEMENT table_item EMPTY>
<!ATTLIST table_item
          temp CDATA #REQUIRED
          value CDATA #REQUIRED
          low_temp CDATA #IMPLIED>
<!ELEMENT extra_scenario (scenario)+>
<!ELEMENT scenario (trigger_statuses? , trigger_packages? , limiter*)>
<!ATTLIST scenario name CDATA #REQUIRED>
<!ATTLIST scenario priority CDATA #IMPLIED>
<!ELEMENT trigger_statuses (status)+>
<!ELEMENT status EMPTY>
<!ATTLIST status name CDATA #REQUIRED>
<!ELEMENT trigger_packages (package)+>
<!ELEMENT package EMPTY>
<!ATTLIST package name CDATA #REQUIRED>
] >

<siop_document>

    <levels>
        <level id="0" temp="420" />
        <level id="1" temp="440" />
        <level id="2" temp="460" />
        <level id="3" temp="480" />
        <level id="4" temp="500" />
        <level id="5" temp="520" />
        <level id="6" temp="540" />
    </levels>

    <default_scenario>
        <limiter name="CPUFreqMax" type="number">
            <table_item temp="440" value="-1" />
            <table_item temp="460" value="1482000" />
            <table_item temp="480" value="1352000" />
            <table_item temp="500" value="1248000" />
            <table_item temp="520" value="1144000" />
            <table_item temp="540" value="1014000" />
        </limiter>
        <limiter name="GPUFreqMax" type="number">
            <table_item temp="440" value="-1" />
            <table_item temp="460" value="728" />
            <table_item temp="480" value="676" />
            <table_item temp="500" value="545" />
            <table_item temp="520" value="450" />
        </limiter>
        <limiter name="PST" type="number">
            <table_item temp="420" value="1" />
        </limiter>
        <limiter name="Charging" type="number">
            <table_item temp="420" value="100" />
        </limiter>
        <limiter name="LCDBrightness" type="number">
            <table_item temp="460" value="-1" />
            <table_item temp="480" value="220" />
        </limiter>
    </default_scenario>

    <extra_scenario>

        <scenario name="ScreenOff">
            <limiter name="Charging" type="number">
                <table_item temp="420" value="100" />
            </limiter>
        </scenario>

        <scenario name="ScreenOffInCall">
            <limiter name="Charging" type="number">
                <table_item temp="420" value="70" />
            </limiter>
        </scenario>
        
        <scenario name="HotGameControl3">
            <trigger_packages>
                <package name="com.ea.games.r3_row" />
                <package name="com.ea.games.r3_na" />
            </trigger_packages>

            <limiter name="CPUFreqMax" type="number">
                <table_item temp="400" value="-1" />
                <table_item temp="420" value="1352000" />
                <table_item temp="440" value="1144000" />
            </limiter>
            <limiter name="GPUFreqMax" type="number">
                <table_item temp="400" value="-1" />
                <table_item temp="420" value="545" />
            </limiter>
            <limiter name="Charging" type="number">
                <table_item temp="420" value="90" />
            </limiter>
            <limiter name="LCDBrightness" type="number">
                <table_item temp="420" value="206" />
            </limiter>
        </scenario>
        
        <scenario name="BrowserScenario">
            <limiter name="Charging" type="number">
                <table_item temp="420" value="90" />
            </limiter>
            <limiter name="LCDBrightness" type="number">
                <table_item temp="420" value="206" />
            </limiter>
        </scenario>

        <scenario name="YouTube">
            <trigger_packages>
                <package name="com.google.android.youtube" />
            </trigger_packages>

            <limiter name="LCDBrightness" type="number">
                <table_item temp="420" value="206" />
            </limiter>
        </scenario>

        <scenario name="AppStart" priority="1">
            <limiter name="CPUFreqMax" type="number">
                <table_item temp="420" value="-1" />
            </limiter>
            <limiter name="GPUFreqMax" type="number">
                <table_item temp="420" value="-1" />
            </limiter>
        </scenario>

        <scenario name="NDrive">
            <limiter name="LCDBrightness" type="number">
                <table_item temp="420" value="206" />
            </limiter>
        </scenario>

        <scenario name="SmartSwitch">
            <limiter name="CPUFreqMax" type="number">
                <table_item temp="420" value="-1" />
            </limiter>
        </scenario>

        <scenario name="SmartSwitchTransfer" priority="1">
            <limiter name="CPUFreqMax" type="number">
                <table_item temp="420" value="-1" />
            </limiter>
            <limiter name="LCDBrightness" type="number">
                <table_item temp="280" value="-1" />
                <table_item temp="300" value="56" />
            </limiter>
        </scenario>

        <scenario name="SmartSwitchOtg" priority="1">
            <limiter name="CPUFreqMax" type="number">
                <table_item temp="420" value="-1" />
            </limiter>
        </scenario>

        <scenario name="LowTemp" priority="2">
            <limiter name="LCDBrightness" type="number">
                <table_item temp="-100" value="14" />
                <table_item temp="-90" value="115" />
                <table_item temp="0" value="-1" />
            </limiter>
        </scenario>
    </extra_scenario>

</siop_document>
